<% employee = Employee.find_by(id: session[:employee_id]) %>
<% school = School.find_by(name: employee.name) %> 


<div>
  <div class="col-md-4 offset-md-4 schoolname">
  <h2><%= school.schoolname %>高等学校</h2>
  
  <%= form_tag("/testkai_end/create") do %>
    <div class="form-group">
      <label>受験人数</label>
      <input name="student" class="form-control" type="text">
    </div>
    
    <div class ="form-row align-items-center index">

      <div class="col-auto text-center">  
        <label>使用教室</label>
        <p>
          <%= select_tag :classroom, options_for_select((0..100).to_a),class:"btn btn-outline-dark dropdown-toggle"  %>
        </p>
      </div>
      
      <div class="col-auto text-center">
        <label>本部</label>
        <p>
          <%= select_tag :mainroom, options_for_select((0..10).to_a),class:"btn btn-outline-dark dropdown-toggle"  %>    
        </p>
      </div>
      
    
      <div>
        <div class="form-group col">
          <label>コメント</label>
          <textarea name="content" class="form-control"  value="<%= school.content %>" ></textarea>
        </div>

        <div class="submit-btn">
          <input type="submit" class="btn btn-primary" value="送信">
        </div> 
        
        <div class="index-btn">
          <%= link_to "終了報告一覧", testkai_end_index_path %>
        </div>
        
      </div>
    </div>
  <% end %>
  
</div>