<% employee = Employee.find_by(id: session[:employee_id]) %>
<% school = School.find_by(name: employee.name) %> 


<div class="container">
  <div class="col-md-4 offset-md-4 schoolname">
    <h2><%= school.schoolname %>高等学校</h2>
  
    <%= form_tag("/testkai_end/create") do %>
      <div class ="form-row">
        
        <div class="form-group col-6">
          <label>受験人数</label>
            <input name="student" class="form-control" type="text" style="border:1px solid #A9A9A9">
        </div>
        
        <div class="form-group col-3">  
          <label>使用教室</label>
            <%= select_tag :classroom, options_for_select((0..100).to_a),
            class:"btn btn-outline-dark dropdown-toggle", style:"border:1px solid #A9A9A9" %>
        </div>
      
        <div class="form-group col-3"> 
          <label>本部</label>
            <%= select_tag :mainroom, options_for_select((0..10).to_a),
            class:"btn btn-outline-dark dropdown-toggle", style:"border:1px solid #A9A9A9"  %>    
          
        </div>
      
      </div>
        
      <div class="form-group">
        <label>コメント</label>
          <textarea name="content" class="form-control"  value="<%= school.content %>" style="border:1px solid #A9A9A9">
          </textarea>
        </div>
      
      
        <div class="submit-btn">
          <input type="submit" class="btn btn-primary" value="送信">
        </div> 
        
        <div class="index-btn">
          <%= link_to "終了報告一覧", testkai_end_index_path %>
        </div>
      </div>  
      
      <div class="fixed-top mr-3" style="left:initial;">
      <%= link_to("ログアウト", "/testkai_end_login/logout", {method: :post}) %> 
    </div>
      
    <% end %>
  </div>
</div>