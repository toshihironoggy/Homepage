<div class="main">
    <div class="container">
    <h1 class="form-heading">ログイン</h1>
        
        <div class="login_form">
            <%= form_tag("/login") do %>
                <div class="form">
                    <div class="form-body">
                    <h2>なまえ</h2>
                    <p>
                        <input name="name">
