      <tbody>
        <% @movies.each do |movie| %>
          <tr bgcolor="#e5ffcc">
            
            <td style="width:25%">
              <div class="text-center">
                <%= link_to image_tag("/movie_images/#{movie.image}", :size => "120x100"), "movies/#{movie.id}" %>
              </div>
            </td>
            <td style="width:20%">
              <%= movie.tag_name %>
            </td>
            <td class="h2 text-dark text-left" style="width:55%"><%= link_to movie.title, "movies/#{movie.id}" %>
            </td>
            
          </tr>
        <% end %>  
      </tbody>
    </table>
  </div>
 


