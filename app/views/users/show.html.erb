<h3><%= @user.username %></h3>

<% if @user.avatar? %>
  <%= image_tag @user.avatar.url , class: "icon" %>
<% else %>
  <%= image_tag "default.png" , class: "icon"%>
<% end %>

<% @movies.each do |movie| %>
  <div class="box2">
    <div class="movie-title">
      <span class="fa fa-film" style="color:red;"></span>
        <%= link_to movie.title, controller: :mogisupple, action: :show, id: movie , :style=>"color:#000000;" %>
    </div>
    <% movie.tag_list.add(movie.tag_name.split(","))%>
    <%= render 'mogisupple/tag_list', tag_list: movie.tag_list %>
  </div>  
<% end %>

