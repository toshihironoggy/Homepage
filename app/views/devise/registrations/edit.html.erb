<div class="col-md-4 offset-md-4">
  <!-- 編集 -->
  <h4 class="text-center"><%= t('.title', resource: resource_name.to_s.humanize) %></h4>
  
  <!-- form_for -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    
    <% if false %>-----
    <div class="form-group">
      <%= f.label "プロフィール画像" %>
      <%= f.file_field :avatar %>
    </div>
    <p>
      <%= f.check_box :remove_avatar %> 画像を削除する  
    </p>
    ---<% end %>
    
    
    <!-- 名前 -->
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: '10字以内'%>
    </div>
    <!-- メールアドレス -->
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
    </div>
  
    <!-- パスワード -->
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
  
      <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
    </div>
  
    <!-- 確認用パスワード -->
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
    </div>
  
    <div class="form-group">
      <%= f.submit "プロフィールの変更", class: 'btn btn-primary btn-block' %>
    </div>
  
<% end %>

  
    
    
        
      
      
    
  