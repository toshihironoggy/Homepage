<div class="col-md-6 offset-md-3">

  <!-- 新規登録 -->
  <h4 class="text-center"><%= t('.sign_up') %></h4>
  
  <!-- form_for -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
    <!-- bootstrap　エラーメッセージ -->
    <%= bootstrap_devise_error_messages! %>
  
  
    <!-- メールアドレス labelのclass="required"は必須マークを表示させるため-->
    <div class="form-group">
      <label class="required">メールアドレス</label>
      <%= f.email_field :email, autocomplete: 'email', class: 'form-control' ,placeholder: 'user@example.com(50字以内)' %>
    </div>
  
    <!-- パスワード -->
    <div class="form-group">
      <label class="required">パスワード</label>
      <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: '半角英数6~50字以内' %>
  
    <% if false %>--------------------------
      <% if @minimum_password_length %>
        <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
      <% end %>
    --------------------------------<% end %>
    </div>
    
    <!-- パスワード　確認用 -->
    <div class="form-group">
      <label class="required">確認用パスワード</label>
      <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control', placeholder: '上記と同じパスワード' %>
    </div>
    
    <!-- 名前、10字以内-->
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: '10字以内'%>
    </div>
    
    <!-- 新規登録ボタン-->  
    <div class="form-group text-center">
      <%= f.submit t('.sign_up'), class: 'btn btn-primary col-md-4' %>
    </div>
  <% end %>
  
   <!--ログインはこちらから-->
    <div class="text-center">
      <%= render 'devise/shared/links' %> 
    </div>
  

</div>