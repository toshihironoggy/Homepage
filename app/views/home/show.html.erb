
<div class="container">
  <h2 class="mt-3 mb-3 text-center" >
    <span class="fa fa-film" style="color:red;"></span><%= @movie.title %></h2>

  <div class="box2">
    <div class="text-center">
      <div style="padding:10px;">
        <%= video_tag @movie.url, autoplay: false, 
        width:"100%", height:"100%", controls: true,  loop: false, autobuffer: true %>
      </div>
  
    </div>
  </div>
    <!--
    <div class="embed-responsive embed-responsive-16by9">
    <iframe src="<%= @movie.url %>" frameborder="0"  allowfullscreen="no"></iframe>
    </div>
    -->
    <% @movie.tag_list.add(@movie.tag_name.split(","))%>
    <p>
    <%= render 'home/tag_list_for_show', tag_list: @movie.tag_list %>
    </p>
    <%= link_to("一覧に戻る", root_path, class:"btn btn-outline-primary btn-sm") %>
  
</div>



