<div class="col-md-4 offset-md-4">
 <!--<div class="container">-->
  <!--<h4 class="mt-3 mb-3 text-center" >-->
    <h4><span class="fa fa-film" style="color:red;"></span><%= @movie.title %></h4>

  <div class="box3">
    <!--<div class="text-center">-->
    <div class="box4">
      <%= video_tag @movie.url, autoplay: true, 
      width:"100%", height:"100%", controls: true,  loop: false, autobuffer: true %>
    </div>
  </div>
  
  <!--tag作成、削除するとtagは非表示-->    
  <% @movie.tag_list.add(@movie.tag_name.split(","))%>
  
  <!--tag表示-->
  <% @movie.tag_list.each do |tag| %>
    <% if user_signed_in? %>
      <%= link_to tag, user_path(search_tag: tag), class:'btn btn-outline-primary btn-lg'%>
    <% else %>
      <%= link_to tag, mogisupple_index_path(search_tag: tag), class:'btn btn-outline-primary btn-lg'%>
    <% end %>
  <% end %>
  
  <!--「戻る」ボタンの表示-->
  <p>
  <%= link_to("戻る", :back, class:"btn btn-outline-primary btn-sm") %>
  </p>
</div>     

  <% if false %>------------------------------------------------------
  <%= render 'mogisupple/tag_list_for_show', tag_list: @movie.tag_list %>
  ---------------------------------------------------------------<% end %>
    




